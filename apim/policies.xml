<policies>
  <inbound>
    <base />
    <!-- Subscription key validation -->
    <validate-subscription-key header-name="Ocp-Apim-Subscription-Key" />
    <!-- Rate limit: 60 calls per minute per subscription -->
    <rate-limit-by-key calls="60" renewal-period="60" increment-count="true" counter-key="@(context.Subscription?.Id ?? 'anon')" />
    <set-backend-service base-url="https://<aca-app>.<region>.azurecontainerapps.io" />
  </inbound>
  <backend>
    <base />
  </backend>
  <outbound>
    <base />
  </outbound>
  <on-error>
    <base />
  </on-error>
</policies>
