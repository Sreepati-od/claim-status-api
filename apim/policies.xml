<policies>
    <inbound>
        <base />
        <!-- Require subscription key -->
        <check-header name="Ocp-Apim-Subscription-Key" failed-check-httpcode="401" failed-check-error-message="Subscription key is missing or invalid." />
        <!-- Rate limit: 10 calls per 60 seconds per key -->
        <rate-limit-by-key calls="10" renewal-period="60" counter-key="@(context.Subscription.Key ?? &quot;anonymous&quot;)" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
